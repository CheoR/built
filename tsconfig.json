{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2016"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "./test",
    "./cofig"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "@types/*",
      "src/types/*"
    ]
  }
}
